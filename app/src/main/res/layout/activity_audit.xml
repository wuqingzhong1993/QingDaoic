<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.outsource.danding.qingdaoic.ui.activity.AuditActivity">



    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/banner"
        android:scaleType="centerCrop"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#fff"
            >

            <LinearLayout
                android:id="@+id/ll_audit_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_audit_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核列表"
                    android:textColor="#21B9F0"
                    android:textSize="22sp"/>
                <View
                    android:id="@+id/view_audit_list"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#21B9F0"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_audit_history"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_audit_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textColor="#aaa"
                    android:text="审核历史"/>

                <View
                    android:id="@+id/view_audit_history"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#21B9F0"
                    android:visibility="invisible"/>
            </LinearLayout>


        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:padding="0dp"
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>


    </LinearLayout>

</LinearLayout>