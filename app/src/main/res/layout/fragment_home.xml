<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.outsource.danding.qingdaoic.ui.fragment.HomeFragment">


    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <!-- 待办工作 -->
            <LinearLayout
                android:id="@+id/audit_wait"
                android:background="#fff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="3dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待 办 工 作"
                        android:textSize="17sp"
                        android:textColor="#222"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eee"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查 看 工 作 事 项"
                        android:textSize="14sp"
                        android:textColor="#666"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">


                    <ImageView
                        style="@style/BaseIVInLL"
                        android:layout_width="30dp"
                        android:src="@drawable/wait_for_audit" />

                </LinearLayout>

            </LinearLayout>

            <!-- 经办工作 -->
            <LinearLayout
                android:id="@+id/audit_by_operator"
                android:background="#fff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="经 办 工 作"
                        android:textSize="17sp"
                        android:textColor="#222"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eee"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查 看 完 成 结 果"
                        android:textSize="14sp"
                        android:textColor="#666"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">


                    <ImageView
                        style="@style/BaseIVInLL"
                        android:layout_width="30dp"
                        android:src="@drawable/work_auditing" />

                </LinearLayout>

            </LinearLayout>

            <!-- 已办工作 -->
            <LinearLayout
                android:id="@+id/audit_already"
                android:background="#fff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="3dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已 办 工 作"
                        android:textSize="17sp"
                        android:textColor="#222"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#eee"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查 看 完 成 结 果"
                        android:textSize="14sp"
                        android:textColor="#666"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_weight="1">


                    <ImageView
                        style="@style/BaseIVInLL"
                        android:layout_width="30dp"
                        android:src="@drawable/audit_already" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <ScrollView
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        >

                        <LinearLayout
                            android:id="@+id/ll_business"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="4dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <ImageView
                                    style="@style/BaseIVInLL"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:src="@drawable/business" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="2dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="办公"
                                    android:textSize="16sp"
                                    android:textColor="#222"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_travel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="4dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <ImageView
                                    style="@style/BaseIVInLL"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:src="@drawable/travel" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="2dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="差旅"
                                    android:textSize="16sp"
                                    android:textColor="#222"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_conference"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="4dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <ImageView
                                    style="@style/BaseIVInLL"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:src="@drawable/conference" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="2dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="会议"
                                    android:textSize="16sp"
                                    android:textColor="#222"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_cultivate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="4dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <ImageView
                                    style="@style/BaseIVInLL"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:src="@drawable/cultivate" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="2dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="培训"
                                    android:textSize="16sp"
                                    android:textColor="#222"
                                    />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="6dp"
                        >

                        <LinearLayout
                            android:id="@+id/ll_jd"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="4dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <ImageView
                                    style="@style/BaseIVInLL"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:src="@drawable/reception" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="2dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="接待"
                                    android:textSize="16sp"
                                    android:textColor="#222"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_go_abroad"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="4dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <ImageView
                                    style="@style/BaseIVInLL"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:src="@drawable/go_abroad" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="2dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="出国"
                                    android:textSize="16sp"
                                    android:textColor="#222"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_baoxiao"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="4dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <ImageView
                                    style="@style/BaseIVInLL"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:src="@drawable/reimburse" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="2dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="报销"
                                    android:textSize="16sp"
                                    android:textColor="#222"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="4dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <ImageView
                                    style="@style/BaseIVInLL"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:src="@drawable/else_business" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:padding="2dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="其他"
                                    android:textSize="16sp"
                                    android:textColor="#222"
                                    />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </ScrollView>



    </LinearLayout>

</LinearLayout>


